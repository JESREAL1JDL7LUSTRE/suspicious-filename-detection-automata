{
  "name": "suspicious-filename-detector",
  "version": "1.0.0",
  "description": "CS311 Suspicious Filename Detector",
  "main": "electron/main.js",
  "author": "pogi",
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix display\" \"wait-on http://localhost:5173 && electron .\"",
    "build:cpp": "powershell -ExecutionPolicy Bypass -File .scripts/build.ps1",
    "build:frontend": "npm run build --prefix display",
    "build:portable": "node build-portable.js",
    "build:sfx": "node build-sfx.js",
    "build:all": "npm run build:cpp && npm run build:frontend && npm run build:portable && npm run build:sfx"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "fs-extra": "^11.2.0",
    "wait-on": "^7.2.0"
  }
}